<!DOCTYPE html>
<html>
<head>
  <title>Facebook Telephone</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <%= stylesheet_link_tag 'redbox' %>
  <%= javascript_include_tag 'redbox' %>

	<script language="javascript" type="text/javascript">
	<!--
	function popitup(url) {
		var left = (screen.width/2)-(275/2);
		var top = (screen.height/2)-(375/2);
		newwindow=window.open(url,'name', 'height=375,width=275,toolbars=no,menubar=no,location=no,scrollbars=no,resizable=yes,status=no,top='+top+', left='+left);
		if (window.focus) {newwindow.focus()}
		return false;
	}

	// -->
	</script>
	
	
  <%= yield(:head) %>
</head>
<body>
	<div id="inline_invite" style="display: none">
	<div style="width: 450px">
	<%= link_to_close_redbox(raw('<img src="/images/close-btn.png" align="right" width="24" height="24" class="close-btn" border="0">'), html_options = {}) %>
	<center>
		<h1>Invitation</h1><br/>
		<div id="generalform">
			<%= form_tag url_for(:controller => "facebook", :action => "invite"), :id => "tool-form", :remote => true do %>
			  <label>Message:</label><br />
			  <%= text_area_tag "message", "Check out Facebook's new telephone!  http://apps.facebook.com/telephone", {:cols => 40, :rows => 5} %><br />
			  <br />
			  <%= submit_tag "Send" %>
			<% end %>
		</div>
	</center>
	</div>
	</div>

	<div id="inline_phone" style="display: none">
	<div style="width: 450px">
	<%= link_to_close_redbox(raw('<img src="/images/close-btn.png" align="right" width="24" height="24" class="close-btn" border="0">'), html_options = {}) %>
	<center>
		<h1>Your Number</h1><br/>
		<div id="generalform">
			<%= form_tag url_for(:controller => "facebook", :action => "numberupdate"), :id => "number-form", :remote => true do %>
			  
			  <%= text_field_tag "phonenumber" %><br />
			  <br />
			  <%= submit_tag "Update" %>
			<% end %>
		</div>
	</center>
	</div>
	</div>

<%= yield %>

</body>
</html>
